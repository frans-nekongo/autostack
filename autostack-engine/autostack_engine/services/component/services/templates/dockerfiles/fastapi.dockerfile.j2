FROM python:3.13-slim as builder

ENV PYTHONUNBUFFERED=1
ENV PIP_NO_CACHE_DIR=1
ENV PIP_DISABLE_PIP_VERSION_CHECK=1

RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

FROM python:3.13-slim as runtime

ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

COPY --from=builder /usr/local/lib/python3.13/site-packages/ /usr/local/lib/python3.13/site-packages/
COPY --from=builder /usr/local/bin/ /usr/local/bin/

RUN useradd -m {{ app_user|default('appuser') }}

WORKDIR /app

COPY --chown={{ app_user|default('appuser') }}:{{ app_user|default('appuser') }} . .

USER {{ app_user|default('appuser') }}

EXPOSE {{ port|default('8000') }}

CMD ["uvicorn", "{{ app_module|default('main:app') }}", "--host", "0.0.0.0", "--port", "{{ port|default('8000') }}", "--workers", "{{ workers|default('4') }}"]