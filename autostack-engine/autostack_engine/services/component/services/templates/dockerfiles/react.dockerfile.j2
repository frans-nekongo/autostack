FROM node:22-alpine AS build

WORKDIR /app

COPY package*.json ./
RUN npm install {{ npm_flags|default('') }}

COPY . .
RUN npm run build

FROM nginx:alpine

RUN rm -rf /etc/nginx/conf.d/default.conf

COPY nginx.conf /etc/nginx/conf.d/default.conf
COPY --from=build /app/{{ build_dir|default('build') }} /usr/share/nginx/html

EXPOSE {{ port|default('80') }}

CMD ["nginx", "-g", "daemon off;"]